@page "/proyectos/importar-presupuesto"
@using WorkFlow_SIG10._1.Data
@using WorkFlow_SIG10._1.Models
@using WorkFlow_SIG10._1.Services
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject ExcelImportService ImportService
@inject NavigationManager NavigationManager
@inject ILogger<ImportarPresupuesto> Logger

<PageTitle>Importar y Actualizar Presupuesto desde Excel</PageTitle>

<h3>Importar o Actualizar Presupuesto desde Excel</h3>
<p>
    Esta herramienta permite cargar un archivo Excel (.xlsx) para importar o actualizar los ítems del presupuesto de un proyecto.
</p>
<div class="alert alert-info">
    <strong>Nota:</strong> Al cargar un archivo, el sistema intentará mantener la consistencia de los datos. Los nuevos ítems se añadirán, los existentes se actualizarán y los que no estén en el archivo se eliminarán.
</div>

<div class="card card-style">
    <div class="card-body">
        <div class="mb-3">
            <label for="project-select" class="form-label">1. Seleccione el Proyecto de Destino:</label>
            <select id="project-select" class="form-select" @bind="selectedProjectId">
                <option value="0">-- Elija un proyecto --</option>
                @if (projects != null)
                {
                    @foreach (var project in projects)
                    {
                        <option value="@project.ProyectoID">@project.NombreObra</option>
                    }
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="file-input" class="form-label">2. Seleccione el Archivo Excel (.xlsx):</label>
            <InputFile id="file-input" OnChange="@HandleFileSelected" class="form-control" accept=".xlsx" />
        </div>

        <button class="btn btn-primary" @onclick="HandleImport" disabled="@(isProcessing || selectedProjectId == 0 || file == null)">
            <span class="btn-content">
                @if (isProcessing)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span> Procesando...</span>
                }
                else
                {
                    <span><i class="fas fa-file-import"></i> Importar / Actualizar Presupuesto</span>
                }
            </span>
        </button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="NavigateToProjects">
            <span class="btn-content">
                <i class="fas fa-arrow-left"></i> Salir
            </span>
        </button>

        @if (!string.IsNullOrEmpty(statusMessage))
        {
            <div class="mt-3 alert @statusMessageClass">
                @statusMessage
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public int ProyectoId { get; set; }

    private List<Proyecto> projects = new();
    private int selectedProjectId;
    private IBrowserFile? file;
    private string statusMessage = string.Empty;
    private string statusMessageClass = string.Empty;
    private bool isProcessing = false;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        projects = await context.Proyectos.OrderBy(p => p.NombreObra).ToListAsync();

        if (ProyectoId > 0 && projects.Any(p => p.ProyectoID == ProyectoId))
        {
            selectedProjectId = ProyectoId;
        }
    }

    private void NavigateToProjects()
    {
        NavigationManager.NavigateTo("/proyectos");
    }

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        if (e.File.Size > 20 * 1024 * 1024)
        {
            statusMessage = "El archivo es demasiado grande. El límite es de 20 MB.";
            statusMessageClass = "alert-danger";
            file = null;
        }
        else
        {
            file = e.File;
            statusMessage = $"Archivo seleccionado: {file.Name}";
            statusMessageClass = "alert-info";
        }
    }

    private async Task HandleImport()
    {
        if (selectedProjectId == 0 || file == null)
        {
            statusMessage = "Por favor, seleccione un proyecto y un archivo.";
            statusMessageClass = "alert-danger";
            return;
        }

        isProcessing = true;
        statusMessage = "Iniciando importación/actualización del presupuesto... No cierre esta página.";
        statusMessageClass = "alert-info";

        try
        {
            await using var fileStream = file.OpenReadStream(maxAllowedSize: 20 * 1024 * 1024);
            await ImportService.UpdateBudgetFromExcelAsync(selectedProjectId, fileStream);
            statusMessage = "¡Proceso de presupuesto completado con éxito!";
            statusMessageClass = "alert-success";
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error durante la importación/actualización del archivo Excel.");
            statusMessage = $"Error durante el proceso: {ex.Message}";
            statusMessageClass = "alert-danger";
        }
        finally
        {
            isProcessing = false;
        }
    }
}
