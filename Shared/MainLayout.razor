@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<div class="app-container" style="--nav-width: @(isNavCollapsed ? "70px" : "250px");">
    <NavMenu OnToggle="HandleNavToggle" />

    <main class="app-main">
        <article class="app-content px-4">
            @Body
        </article>
    </main>
    <button @onclick="ScrollToTop" class="scroll-to-top-btn" id="scrollToTopBtn" title="Ir arriba">
        <i class="fas fa-arrow-up"></i>
    </button>
</div>

@code {
    private bool isNavCollapsed = false;

    private void HandleNavToggle(bool collapsed)
    {
        isNavCollapsed = collapsed;
    }

    private async Task ScrollToTop()
    {
        await JSRuntime.InvokeVoidAsync("scrollToTop");
    }
}