@using WorkFlow_SIG10._1.Data
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<ApplicationDbContext> DbContextFactory

<a href="/oficina-tecnica" class="widget-link">
    <div class="widget-header">
        <h5>Oficina Técnica</h5>
        <span class="oi oi-folder widget-icon"></span>
    </div>
    <div class="widget-body">
        <div class="widget-value">@count</div>
        <div class="widget-description">documentos técnicos</div>
    </div>
</a>

@code {
    private int count;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            using var dbContext = await DbContextFactory.CreateDbContextAsync();
            count = await dbContext.OficinasTecnicas.CountAsync();
        }
        catch (Exception ex)
        {
            // Log or handle the exception
            count = 0;
        }
    }
}