@page "/forgot-password"
@model WorkFlow_SIG10._1.Pages.ForgotPasswordModel
@{
    Layout = null; // Use a null layout for a fully custom page
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recuperar Contraseña - SIG</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="css/site-aursig.css" rel="stylesheet" />
    <link href="css/html-sigaur.css" rel="stylesheet" />
</head>
<body class="auth-body">

    <div class="auth-card">
        <div class="auth-content">
            <div class="auth-header">
                <h1 class="auth-title">Recuperar Contraseña</h1>
                <p class="auth-subtitle">Ingresa tu correo electrónico para recibir un enlace de recuperación.</p>
            </div>

            <form method="post">
                @if (!string.IsNullOrEmpty(Model.StatusMessage))
                {
                    <div class="alert @(Model.StatusMessage.StartsWith("Error") ? "alert-danger" : "alert-success") text-danger" style="background: none; border:none;">
                        @Model.StatusMessage
                    </div>
                }

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.AntiForgeryToken()

                <div class="input-group">
                    <label asp-for="Input.Email" class="input-label">Correo Electrónico</label>
                    <input asp-for="Input.Email" class="input-field" placeholder="nombre@ejemplo.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                                <button type="submit" class="btn-interactive-auth">
                    Enviar Enlace
                    <svg fill="currentColor" viewBox="0 0 24 24" class="icon">
                        <path clip-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm4.28 10.28a.75.75 0 000-1.06l-3-3a.75.75 0 10-1.06 1.06l1.72 1.72H8.25a.75.75 0 000 1.5h5.69l-1.72 1.72a.75.75 0 101.06 1.06l3-3z" fill-rule="evenodd"></path>
                    </svg>
                </button>

                <div class="auth-links">
                    <p>¿Recordaste tu contraseña? <a href="/login">Inicia sesión</a></p>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
