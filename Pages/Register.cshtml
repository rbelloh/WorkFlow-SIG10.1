@page "/register"
@model WorkFlow_SIG10._1.Pages.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link href="~/css/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
        <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(to right, #6a11cb, #2575fc); /* Modern gradient background */
            color: #333; /* Darker text for contrast on light card */
            padding: 20px; /* Add some padding around the body */
        }
        .card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3); /* Stronger shadow */
            padding: 2.5rem; /* More padding */
            width: 100%;
            max-width: 700px; /* Increased max-width for more space */
        }
        .card-title {
            color: #6a11cb;
            font-weight: bold;
            margin-bottom: 1.5rem; /* More space below title */
        }
        .form-label {
            font-weight: bold;
            color: #555;
            margin-bottom: 0.5rem; /* Space below label */
        }
        .form-control {
            border-radius: 5px; /* Slightly rounded inputs */
            border: 1px solid #ddd;
            padding: 0.75rem 1rem;
        }
        .btn-primary {
            background-color: #6a11cb;
            border-color: #6a11cb;
            transition: background-color 0.3s ease, transform 0.2s ease; /* Add transform for subtle hover effect */
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }
        .btn-primary:hover {
            background-color: #2575fc;
            border-color: #2575fc;
            transform: translateY(-2px); /* Lift button slightly on hover */
        }
        .alert {
            margin-top: 1.5rem;
            border-radius: 5px;
        }
        /* Adjust spacing for rows */
        .row > div {
            margin-bottom: 1rem; /* Space between fields in rows */
        }
        .mb-3 {
            margin-bottom: 1rem !important; /* Adjust default margin-bottom for consistency */
        }
    </style>
</head>
<body>
    <div class="card">
        <h3 class="card-title text-center mb-4">Registrarse</h3>
        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert @(Model.StatusMessage.StartsWith("Error") ? "alert-danger" : "alert-success")" role="alert">
                @Model.StatusMessage
            </div>
        }
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.Username" class="form-label"></label>
                    <input asp-for="Input.Username" class="form-control" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.Nombre" class="form-label"></label>
                    <input asp-for="Input.Nombre" class="form-control" />
                    <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.Apellido" class="form-label"></label>
                    <input asp-for="Input.Apellido" class="form-control" />
                    <span asp-validation-for="Input.Apellido" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.NumeroIdentificacion" class="form-label"></label>
                    <input asp-for="Input.NumeroIdentificacion" class="form-control" />
                    <span asp-validation-for="Input.NumeroIdentificacion" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Direccion" class="form-label"></label>
                <input asp-for="Input.Direccion" class="form-control" />
                <span asp-validation-for="Input.Direccion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Dependencia" class="form-label"></label>
                <input asp-for="Input.Dependencia" class="form-control" />
                <span asp-validation-for="Input.Dependencia" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <input asp-for="Input.Password" type="password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">Registrar</button>

            <div class="text-center mt-3">
                <a href="/login">Volver al Login</a>
            </div>
        </form>
    </div>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>